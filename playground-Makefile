CC = gcc
LD = ld
CCFLAGS = -Iinclude
# LDFLAGS = 

all: build run

build: playground.c
	$(CC) $(CCFLAGS) -c lzma/lzma.c -o lzma/lzma.o
	$(CC) $(CCFLAGS) -c playground.c -o playground.o
	$(CC) playground.o lzma/lzma.o -o playground


run:
	./playground

clean:
	-@rm playground.o playground output.bin 2>/dev/null || true